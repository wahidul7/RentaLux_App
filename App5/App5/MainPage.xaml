<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.MainPage"
             Title="RentaLux"
             BackgroundImageSource="bg4.webp">

    <StackLayout Padding="30" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
        <!-- Logo Image -->
        <Frame WidthRequest="180" HeightRequest="180" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="logo.jpg" 
           Aspect="AspectFit"  />
        </Frame>



        <!-- Buttons -->
        <Button Text="User Profile" 
                BackgroundColor="#007AFF" 
                TextColor="White" 
                CornerRadius="20" 
                Clicked="OnUserProfileClicked" />

        <Button Text="Start Renting" 
                BackgroundColor="#007AFF" 
                TextColor="White" 
                CornerRadius="20" 
                Clicked="OnStartRentingClicked" />
    </StackLayout>
</ContentPage>
