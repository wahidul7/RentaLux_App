<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.UserProfilePage"
             Title="RentaLux">

    <StackLayout Padding="20">
        <Label Text="User Profile" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#333" />
        <Label Text="First Name" FontAttributes="Bold" />
        <Label Text="{Binding FirstName}" />

        <Label Text="Last Name" FontAttributes="Bold" />
        <Label Text="{Binding LastName}" />

        <Label Text="Username" FontAttributes="Bold" />
        <Label Text="{Binding Username}" />

        <Label Text="Email" FontAttributes="Bold" />
        <Label Text="{Binding Email}" />

        <Label Text="Phone" FontAttributes="Bold" />
        <Label Text="{Binding Phone}" />

        <Label Text="Date of Birth" FontAttributes="Bold" />
        <Label Text="{Binding DateOfBirth, StringFormat='{0:D}'}" />

        <Label Text="Driver License" FontAttributes="Bold" />
        <Label Text="{Binding DriverLicense}" />

        <Button Text="Edit Profile" Clicked="OnEditProfileClicked" BackgroundColor="#007AFF" TextColor="White" CornerRadius="20" />
        <Button Text="Delete Profile" Clicked="OnDeleteProfileClicked" BackgroundColor="Red" TextColor="White" CornerRadius="20" />
    </StackLayout>
</ContentPage>
